{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "allowImportingTsExtensions":true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "types": [], // No Jest or Cypress types here
    "skipLibCheck": true // Skip type checking for library files
  },
  "include": [
    "src/**/*" // Include only app source files
  ],
  "exclude": [
    "node_modules",
    "cypress",   // Exclude Cypress tests
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
